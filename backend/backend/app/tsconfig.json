{
  "compilerOptions": {
    "target": "ES2020",  // Or a suitable target version
    "module": "NodeNext",  // Or "ESNext" if needed
    "moduleResolution": "nodenext",  // Node.js style module resolution
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "resolveJsonModule": true,  // If you need to import JSON files
    "allowSyntheticDefaultImports": true  // To handle default imports from commonjs modules
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
